post_install() {
users=$(ls /home)
for i in $users; do 
	mkdir -p /home/$users/.config/plasmaConfSaver
	cp -r /usr/share/plasma/plasmoids/com.pajuelo.plasmaConfSaver/examples/* /home/$users/.config/plasmaConfSaver/
done
}

