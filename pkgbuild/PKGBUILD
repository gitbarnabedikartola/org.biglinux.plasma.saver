# Maintainer: Barnabé di Kartola <barnabedikartola@gmail.com>

pkgname=org.biglinux.plasma.saver
pkgver=$(date +%y.%m.%d)
pkgrel=$(date +%H%M)
pkgdesc="Backup das configurações do Plasma"
arch=('any')
# url="https://github.com/biglinux/$pkgname"
url="https://github.com/gitbarnabedikartola/$pkgname"
license=('GPL3')
depends=('spectacle' 'kdialog' 'konsole' 'coreutils' 'tar')
provides=("$pkgname")
# conflicts=('')
source=("git+${url}.git")
md5sums=('SKIP')
if [ -e "${pkgname}.install" ];then
    install=${pkgname}.install
fi

package() {

    InternalDir="${srcdir}/${pkgname}"

    # Copy files
    if [ -d "${InternalDir}/usr" ]; then
        cp -r "${InternalDir}/usr" "${pkgdir}/"
    fi

    if [ -d "${InternalDir}/etc" ]; then
        cp -r "${InternalDir}/etc" "${pkgdir}/"
    fi

    if [ -d "${InternalDir}/opt" ]; then
        cp -r "${InternalDir}/opt" "${pkgdir}/"
    fi
}

post_install() {
  sh /usr/share/plasma/plasmoids/com.pajuelo.plasmaConfSaver/translate/build.sh --restartplasma
}
